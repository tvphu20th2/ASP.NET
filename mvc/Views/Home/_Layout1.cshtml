<!DOCTYPE html>
<html lang="en">
<head>
    <title>Tạ Văn Phú Shop</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/79badda595.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- Carousel -->
    <div id="demo" class="carousel slide" data-bs-ride="carousel">

        
        <!-- carousel -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/carousel/banner-khuyen-m_984_1920.png.webp" 
                     alt="Chất lượng" class="d-block w-100" />
               
            </div>
         </div>
    </div>
            <nav class="navbar navbar-expand-sm bg-primary navbar-dark ">
                <div class="container">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Trang chủ</a>
                        </li>
               
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">Quản lý</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ViewCart">Giỏ hàng</a>
                        </li>

                    </ul>
                    <form class="d-flex">
                        <input class="form-control-me-2" type="text" placeholder="Nhập tên hoặc hãng sản xuất ...?" value="@ViewData["Gatemployeedetails"]" name="Empseach" style="width:350px; height:40px;" />
                        <input class="btn btn-danger" type="submit" value="Tìm" />
                    </form>
                </div>


            </nav>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <div class="mt-5 p-4 bg-dark text-white text-center">
                <p>Website Bán Điện Thoại - 2022</p>
                <p>Tạ Văn Phú - DTH195338 </p>
            </div>


</body>
</html>
